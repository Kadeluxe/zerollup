{
  "name": "zerollup",
  "version": "1.0.0",
  "description": "Zero rollup plugins and toolset",
  "config": {
    "pkg": "*",
    "env": "production",
    "rollup": "../../rollup.config.js"
  },
  "private": true,
  "scripts": {
    "clean": "lerna clean --yes && rm -rf packages/*/package-lock.json node_modules packages/*/.rpt2_cache packages/*/dist docs/*",
    "build": "NODE_ENV=$npm_package_config_env lerna exec --scope @$npm_package_name/$npm_package_config_pkg -- rollup -c $npm_package_config_rollup",
    "dev": "NODE_ENV=development lerna exec --scope @$npm_package_name/$npm_package_config_pkg -- rollup -c $npm_package_config_rollup -w",
    "postinstall": "lerna bootstrap --hoist",
    "publish": "lerna publish",
    "build.helpers": "npm run build --zerollup:pkg=helpers",
    "build.preset-ts": "npm run build --zerollup:pkg=preset-ts",
    "build.injector": "npm run build --zerollup:pkg=injector",
    "build.plugin-assets": "npm run build --zerollup:pkg=plugin-assets",
    "build.plugin-template": "npm run build --zerollup:pkg=plugin-template"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^9.6.1",
    "lerna": "^2.9.1",
    "rollup": "^0.57.1",
    "ts-node": "^5.0.1",
    "tsconfig-paths": "^3.2.0",
    "typescript": "^2.8.1"
  },
  "dependencies": {}
}
