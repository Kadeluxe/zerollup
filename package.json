{
  "name": "zerollup",
  "version": "1.0.0",
  "description": "Zero rollup plugins and toolset",
  "private": true,
  "config": {
    "env": "production"
  },
  "scripts": {
    "clean": "rm -rf packages/*/.rpt2_cache packages/*/dist",
    "clean.all": "lerna clean --yes && rm -rf packages/*/package-lock.json node_modules packages/*/.rpt2_cache packages/*/dist docs/*",
    "build": "NODE_ENV=production rollup -c rollup.config.js",
    "dev": "NODE_ENV=development rollup -w -c rollup.config.js",
    "postinstall": "lerna bootstrap --hoist",
    "publish": "npm run build && lerna publish --yes"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^9.6.1",
    "lerna": "^2.9.1",
    "rollup": "^0.57.1",
    "source-map-support": "*",
    "typescript": "^2.8.1"
  },
  "dependencies": {}
}
